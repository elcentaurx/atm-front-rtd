{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/request/**",
        "dynamicLinks": true
      },
      {
        "source": "/create/**",
        "dynamicLinks": true
      }
    ]
  }
}
